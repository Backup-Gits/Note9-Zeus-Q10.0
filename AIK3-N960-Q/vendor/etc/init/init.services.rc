on property:sys.boot_completed=1
    stop proca
    stop secure_storage
    write /sys/devices/platform/17500000.mali/throttling1 572000
    write /sys/devices/platform/17500000.mali/throttling2 546000
    write /sys/devices/platform/17500000.mali/throttling3 455000
    write /sys/devices/platform/17500000.mali/throttling4 338000
    write /sys/devices/platform/17500000.mali/highspeed_clock 338000
    write /sys/devices/platform/17500000.mali/highspeed_load 60

    setprop persist.sys.ui.hw true

